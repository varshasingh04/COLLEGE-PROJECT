<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row">
       <div class="col-8 offset-2">
         <br>
         <h2>Edit your Listings</h2>
          <form method="POST" action="/listings/<%= listing._id %>?_method=PUT">
        
          <div class="mb-3">
             <label for="title" class="form-label">Title</label>
             <input value="<%= listing.title %>" name="listing[title]" type="text" class="form-control">
          </div>
         
          <div class="md-3">
              <label for="description" class="form-label">Description</label>
              <textarea name="listing[description]" class="form-control"><%= listing.description %></textarea>

           </div>
        
        
        <div class="md-3">
            <label for="image" class="form-label">Image Link</label>
            <input value="<%= listing.image %>" name="listing[image]" type="text" class="form-control">
        </div>
       
       <div class="row ">
        <div class="md-3 col-md-4">
             <label for="price" class="form-label">price</label>
            <input value="<%= listing.price %>" name="listing[price]" type="number" class="form-control">
        </div>
        
       
        <div class="md-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input value="<%= listing.country %>" name="listing[country]" type="text" class="form-control">
        </div>
        </div>
        
       
        <div class="md-3 col-md-8">
            <label for="location" class="form-label">Location</label>
            <input value="<%= listing.location %>" name="listing[location]" type="text" class="form-control">
        </div>
        <br>
        
        
        <button class="edit-btn btn-dark">Edit</button>
        <br><br>
    </form>
    </div>
    </div>
</body>

